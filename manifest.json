{
  "manifest_version": 2,

  "name": "Auto-Highlighter",
  "description": "This extension autohighlights the active tab.",
  "version": "1.0",

  "permissions": [
    "activeTab"
  ],
  
  "background": {
    "scripts": ["chr-ext-wrapper.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Highlight this page"
  }
}